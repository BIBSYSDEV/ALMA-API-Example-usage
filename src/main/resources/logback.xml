<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<file>logFile.log</file>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logFile-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <!--/<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5level %logger{36} - %msg%n</pattern>-->
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5level %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="stash" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <filter class="no.bibsys.alma.rest.RequestResponseLoggerFilter"/>
        <destination>${LOGSTASH_DESTINATION:-alma-elk.bibsys.no:5000}</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <logger name="no.bibsys" level="ERROR"/>
    <logger name="no.bibsys.alma.rest.RestClient" level="TRACE"/>
    <logger name="no.bibsys.alma.rest.RestJaxrsCommon" level="TRACE"/>
    <logger name="no.bibsys.alma.rest.RequestResponseLogger" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="stash"/>
    </root>

</configuration>
